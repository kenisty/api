{
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": ["laravel", "framework"],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "doctrine/dbal": "^3.6",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "^10.10",
        "laravel/sanctum": "^3.2",
        "laravel/tinker": "^2.8",
        "zircote/swagger-php": "^4.7"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1",
        "friendsofphp/php-cs-fixer": "^3.22",
        "laravel/pint": "^1.0",
        "laravel/sail": "^1.18",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/larastan": "^2.6",
        "phpmd/phpmd": "^2.14",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.1",
        "spatie/laravel-ignition": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "OpenAPI\\Client\\": "vendor/kenisty/lib",
            "OpenAPI\\Client\\Kenisty\\": "vendor/kenisty/lib/Kenisty"
        }
    },
    "scripts": {
        "test": [
            "composer fix",
            "composer generate",
            "composer phpstan",
            "composer md"
        ],
        "generate": [
            "./vendor/bin/openapi app -o api-specs.yaml",
            "rm -rf vendor/kenisty/",
            "openapi-generator-cli generate -i ./api-specs.yaml -g php -o vendor/kenisty/ --api-package Kenisty --model-package Kenisty",
            "rm -rf docs/",
            "openapi-generator-cli generate -i ./api-specs.yaml -g html -o docs/ --api-package Kenisty --model-package Kenisty"
        ],
        "fix": "vendor/bin/php-cs-fixer fix -v --config=.php-cs-fixer.php",
        "md": "vendor/bin/phpmd ./app ./config ./database ./lang ./routes xml ./phpmd.xml --color",
        "phpstan":  "vendor/bin/phpstan analyse",
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
